{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user of the ExamBridge platform.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user account was created."
        }
      },
      "required": ["uid", "email", "createdAt"]
    },
    "StudyPlan": {
        "title": "Study Plan",
        "type": "object",
        "description": "A personalized, AI-generated study plan for a specific exam.",
        "properties": {
            "userId": {
                "type": "string",
                "description": "The UID of the user who owns this study plan."
            },
            "request": {
                "type": "object",
                "description": "The original inputs from the user that generated this plan.",
                "properties": {
                    "examType": { "type": "string" },
                    "testDate": { "type": "string", "format": "date-time" },
                    "minutesPerDay": { "type": "number" },
                    "availableStudyDays": { "type": "array", "items": { "type": "string" } },
                    "topics": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "topic": { "type": "string" },
                                "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] }
                            },
                            "required": ["topic", "difficulty"]
                        }
                    }
                },
                "required": ["examType", "testDate", "minutesPerDay", "availableStudyDays", "topics"]
            },
            "response": {
                "type": "array",
                "description": "The structured weekly study plan generated by the AI.",
                "items": {
                    "$ref": "#/entities/WeeklyStudyPathModule"
                }
            },
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp when the study plan was created."
            }
        },
        "required": ["userId", "request", "response", "createdAt"]
    },
    "WeeklyStudyPathModule": {
        "title": "Weekly Study Path Module",
        "type": "object",
        "description": "A single week within a study plan, containing multiple study modules.",
        "properties": {
            "week": { "type": "string" },
            "modules": {
                "type": "array",
                "items": {
                    "$ref": "#/entities/StudyPathModule"
                }
            }
        },
        "required": ["week", "modules"]
    },
    "StudyPathModule": {
        "title": "Study Path Module",
        "type": "object",
        "description": "A single study item within a week, focusing on a specific topic.",
        "properties": {
            "topic": { "type": "string" },
            "description": { "type": "string" },
            "link": { "type": "string", "format": "uri" }
        },
        "required": ["topic", "description", "link"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
      "'/users/{userId}'": {
          "schema": { "$ref": "#/entities/UserProfile" },
          "description": "Stores public-facing user profile information. The `userId` must match the UID of the authenticated user."
      },
      "'/users/{userId}/studyPlans/{planId}'": {
          "schema": { "$ref": "#/entities/StudyPlan" },
          "description": "Stores the study plans created by a user. Access is restricted to the user who owns them."
      }
  }
}
